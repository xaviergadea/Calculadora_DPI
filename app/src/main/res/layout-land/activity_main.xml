<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.wwwood.calculadora_dpi.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_LAND_TV_ResolucionVertical"
        android:layout_marginTop="32dp"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/main_LAND_TV_RV"
        android:layout_marginStart="76dp"
        android:textAlignment="center"
        android:text="RV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RV"
        android:id="@+id/main_LAND_TV_RV"
        android:editable="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/main_LAND_TV_ResolucionVertical"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RH"
        android:id="@+id/main_LAND_TV_RH"
        android:editable="false"
        android:textSize="20dp"
        android:layout_below="@+id/main_LAND_TV_ResolucionVertical"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_LAND_TV_ResolucionHorizontal"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/main_LAND_TV_RH"
        android:layout_toEndOf="@+id/main_LAND_TV_RH"
        android:layout_marginStart="76dp"
        android:textAlignment="center"
        android:text="RH" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulgadas"
        android:id="@+id/main_LAND_TV_PulgadasField"
        android:editable="false"
        android:textSize="20dp"
        android:layout_below="@+id/main_LAND_TV_ResolucionHorizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_LAND_TV_Pulgadas"
        android:layout_alignBottom="@+id/main_LAND_TV_PulgadasField"
        android:layout_toEndOf="@+id/main_LAND_TV_PulgadasField"
        android:inputType="numberDecimal"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:text="Pulgadas" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DPI"
        android:id="@+id/main_LAND_TV_DPI"
        android:editable="false"
        android:textSize="20dp"
        android:layout_below="@+id/main_LAND_TV_Pulgadas"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_LAND_TV_DPI_Value"
        android:layout_alignBottom="@+id/main_LAND_TV_DPI"
        android:layout_toEndOf="@+id/main_LAND_TV_DPI"
        android:textAlignment="center"
        android:layout_marginStart="80dp"
        android:text="dpi" />



</RelativeLayout>
